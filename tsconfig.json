{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2022"],
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@game/*": ["game/*"],
      "@errors/*": ["errors/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
